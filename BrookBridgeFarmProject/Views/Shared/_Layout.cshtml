@using Microsoft.AspNet.Identity

<!DOCTYPE html>
<html>
<head>
        <title>BrookBridgeFarm Organic Food</title>
        <meta charset="utf-8">
        <link rel="icon" href="https://dzyngiri.com/favicon.png" type="image/x-icon">
        <link rel="shortcut icon" href="https://dzyngiri.com/favicon.png" type="image/x-icon" />
        <link rel="stylesheet" href="~/Content/css/bootstrap.css" type="text/css" media="screen">
        <link rel="stylesheet" href="~/Content/css/responsive.css" type="text/css" media="screen">
        <link rel="stylesheet" href="~/Content/css/touchTouch.css" type="text/css" media="screen">
        <link rel="stylesheet" href="~/Content/css/kwicks-slider.css" type="text/css" media="screen">
        <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300' rel='stylesheet' type='text/css'>        
   <script type="text/javascript" src="~/Content/js/superfish.js"></script>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title - BrookBridge Farm Project</title>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        @RenderSection("scripts", required: false)

    </head>
    <body>
        <div id="panel">
            <div class="navbar navbar-inverse navbar-fixed-top" id="advanced">
                <span class="trigger">
                    <strong></strong><em></em>
                </span>

                <div class="navbar-inner">
                    <div class="container">
                        <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-top-collapse">
                            <span class="icon-bar">
                            </span>
                            <span class="icon-bar">
                            </span>
                            <span class="icon-bar">
                            </span>
                        </button>
                        <a href="/home/index">
                            <img id="logo" alt="" src="~/Content/img/logo_leaves.png" width="300" />
                        </a>
                        <div class="nav-collapse collapse nav-top-collapse">
                            <ul class="nav">

                                <li class="divider-vertical">
                                </li>
                                <li id="menu">@Html.ActionLink("Home", "Index", "Home")</li>

                                <li id="menu">@Html.ActionLink("About", "About", "Home")</li>

                                @if (Roles.IsUserInRole("Admin") || Roles.IsUserInRole("User"))
                                {
                                    <li id="menu">@Html.ActionLink("Products", "ProductDatabase", "Home")</li>
                                }
                                <li id="menu">@Html.ActionLink("Contact", "Contact", "Home")</li>

                                @if (Roles.IsUserInRole("Admin") || Roles.IsUserInRole("User"))
                                {
                                    <li id="menu">@Html.ActionLink("Basket", "ShoppingListView", "Home")</li>
                                    <li id="menu">@Html.ActionLink("Current Order", "LoadOrderView", "Home")</li>
                                }
                                @if (Roles.IsUserInRole("User"))
                                {
                                    <li id="menu">@Html.ActionLink("Orders History", "LoadDatabases", "Home")</li>
                                }


                                @if (Roles.IsUserInRole("Admin"))
                                {
                                    <li id="menu">@Html.ActionLink("Database Of Orders", "LoadDatabases", "Home")</li>
                                }

                            </ul>
                            @Html.Partial("_LoginPartial")
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <header>
            <div class="container body-content">
            </div>

        </header>

        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year</p>
                <p>BrookBridge Farm Project</p>
            </footer>
        </div>
    </body>
</html>
