@model DataLibrary.Models.ShoppingListModel

@{
    ViewBag.Title = "Buy";
}
<header>
    <hr>

</header>
<h2>Add To Basket</h2>
@section scripts
            {
    <script type="text/javascript" src="~/Content/js/jquery.js"></script>
    <script type="text/javascript" src="~/Content/js/menu.js"></script>

    @Scripts.Render("~/bundles/jqueryval")

}


@using (Html.BeginForm())
{
    
@Html.AntiForgeryToken()
    <hr/>
    <dl class="dl-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.Name)
        @Html.HiddenFor(model => model.Description)
        @Html.HiddenFor(model => model.Code)
        @Html.HiddenFor(model => model.Price)
        @Html.HiddenFor(model => model.Qty)
        @Html.HiddenFor(model => model.Veg)



        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Qty)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Qty)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>

        <dd>
            £
            @Html.DisplayFor(model => model.Price)/each
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.QtyToBuy)

        </dt>


        <dd>

            @Html.EditorFor(model => model.QtyToBuy, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.QtyToBuy, "", new { @class = "text-danger" })

        </dd>
       

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">

                <input type="submit" value="Add To Basket" class="btn btn-default" />

            </div>
        </div>

    </dl>
   
}

<div>
    @Html.ActionLink("Back to List", "ProductDatabase")
</div>


